<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/beznichego6"
    tools:context="com.example.test.OperationActivity"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/button_back"
        android:layout_width="93dp"
        android:layout_height="55dp"
        android:background="@drawable/buttonback1_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="@drawable/obvodka_2"
        android:text="Расчитать"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_back"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edNumerator1"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/beznichego6"
        android:digits="1234567890"
        android:maxLength="3"
        android:gravity="center"
        android:hint="1\nчислитель"
        android:inputType="number"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/operationName"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edDenominator1"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/beznichego6"
        android:digits="1234567890"
        android:gravity="center"
        android:maxLength="3"
        android:hint="1 знаменатель"
        android:inputType="number"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/operationName"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="149dp"
        android:layout_height="49dp"
        android:background="@drawable/min"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edNumerator2"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edNumerator1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/operationName"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/edDenominator1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edNumerator1"
        app:layout_constraintVertical_bias="0.488"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="149dp"
        android:layout_height="49dp"
        android:background="@drawable/min"
        app:layout_constraintBottom_toTopOf="@+id/edDenominator2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toEndOf="@+id/edNumerator1"
        app:layout_constraintTop_toBottomOf="@+id/edNumerator2"
        app:layout_constraintVertical_bias="0.001" />

    <EditText
        android:id="@+id/edDenominator2"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/beznichego6"
        android:digits="1234567890"
        android:maxLength="3"
        android:gravity="center"
        android:hint="2 знаминатель"
        android:inputType="number"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toEndOf="@+id/operationName"
        app:layout_constraintTop_toTopOf="@+id/edNumerator2" />

    <EditText
        android:id="@+id/edNumerator2"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/beznichego6"
        android:digits="1234567890"
        android:gravity="center"
        android:maxLength="3"
        android:hint="2\nчислитель"
        android:inputType="number"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toEndOf="@+id/operationName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/kvadrat1_1"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/operationName" />

</androidx.constraintlayout.widget.ConstraintLayout>